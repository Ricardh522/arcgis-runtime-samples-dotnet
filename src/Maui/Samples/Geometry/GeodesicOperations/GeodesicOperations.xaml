<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:forms="clr-namespace:Esri.ArcGISRuntime.Maui;assembly=Esri.ArcGISRuntime.Maui"
             x:Class="ArcGISRuntime.Samples.GeodesicOperations.GeodesicOperations">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Label  x:Name="ResultsLabel"
                Grid.Row="0" HorizontalTextAlignment="Center"
                TextColor="Red">Tap to set an end point.</Label>
        <forms:MapView Grid.Row="1" x:Name="MyMapView" />
    </Grid>
</ContentPage>